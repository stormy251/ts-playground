{
  "tasks": {
    "start": "deno run --allow-read --allow-net server.ts",
    "web": "deno run --watch --allow-read --allow-net server.ts",
    "cli": "deno run --allow-read --allow-net index.ts",
    "test": "deno test",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "lib": ["deno.window"]
  }
}
